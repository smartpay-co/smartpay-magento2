<?xml version="1.0"?>
<csp_whitelist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Csp:etc/csp_whitelist.xsd">
    <policies>
        <policy id="script-src">
            <values>
                <value id="smartpay-js" type="host">https://js.smartpay.co</value>
            </values>
        </policy>
        <policy id="img-src">
            <values>
                <value id="smartpay-img" type="host">https://js.smartpay.co</value>
            </values>
        </policy>
        <policy id="style-src">
            <values>
                <value id="smartpay-css" type="host">https://js.smartpay.co</value>
            </values>
        </policy>
        <policy id="connect-src">
            <values>
                <value id="smartpay-ping" type="host">https://ping.smartpay.co</value>
            </values>
        </policy>
    </policies>
</csp_whitelist>
